{
  "manifest_version": 3,
  "name": "Short-Form Time Meter & Fun Facts",
  "version": "1.0",
  "description": "Shows a time-spent meter and gentle fun-fact popups while you scroll short-form content sites.",
  "permissions": ["storage"],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://www.tiktok.com/*",
    "*://www.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://www.tiktok.com/*",
        "*://www.instagram.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
